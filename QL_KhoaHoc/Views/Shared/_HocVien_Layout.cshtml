@{
    var maTK = Context.Session.GetInt32("MaTK");
    var tenDN = Context.Session.GetString("TenDN");
    var maHV = Context.Session.GetInt32("MaHV");
    var avatar = Context.Session.GetString("AnhDaiDien");
    var email = Context.Session.GetString("Email");
    var laGiangVien = Context.Session.GetInt32("LaGiangVien") ?? 0;

    var firstLetter = !string.IsNullOrEmpty(tenDN) ? tenDN.Substring(0, 1).ToUpper() : "U";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - QL Khóa Học</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@800;900&family=Poppins:wght@400;600&display=swap" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar {
            box-shadow: 0 2px 4px rgba(0,0,0,.08);
            background-color: #fff !important;
            padding: 0.5rem 1rem; /* Giảm padding để vừa logo */
        }

        /* --- CSS CHO LOGO T&C ACADEMY --- */
        .logo-horizontal {
            display: flex;
            align-items: center;
            gap: 10px;
            text-decoration: none; /* Bỏ gạch chân khi là thẻ a */
        }

        .icon-wrapper {
            position: relative;
            display: flex;
            align-items: center;
            padding-bottom: 5px;
        }

        .letter {
            font-family: 'Nunito', sans-serif;
            font-weight: 900;
            font-size: 32px; /* Kích thước chữ T&C trên Navbar */
            line-height: 1;
            z-index: 2;
        }

        .letter-t {
            color: #1e3a8a;
        }

        .letter-c {
            color: #ea580c;
        }

        .ampersand {
            font-family: 'Poppins', sans-serif;
            font-weight: 300;
            font-size: 20px;
            color: #cbd5e1;
            margin: 0 2px;
            padding-top: 4px;
        }

        .smile-svg {
            position: absolute;
            bottom: -2px;
            left: -5%;
            width: 110%;
            height: 14px;
            z-index: 1;
        }

        .curve-path {
            fill: none;
            stroke: url(#grad_soft);
            stroke-width: 4;
            stroke-linecap: round;
        }

        .text-block {
            display: flex;
            flex-direction: column;
            justify-content: center;
            border-left: 1px solid #e2e8f0;
            padding-left: 10px;
            height: 32px;
        }

        .brand-main {
            font-family: 'Poppins', sans-serif;
            font-weight: 600;
            font-size: 18px;
            line-height: 1;
            color: #334155;
            letter-spacing: 0.5px;
        }

        .brand-slogan {
            font-family: 'Poppins', sans-serif;
            font-size: 8px;
            text-transform: uppercase;
            letter-spacing: 2px;
            color: #64748b;
            margin-top: 2px;
            font-weight: 500;
        }

        .care-highlight {
            color: #f97316;
        }
        /* --------------------------------- */

        .nav-link {
            color: #2d2f31 !important;
            font-weight: 400;
        }

            .nav-link:hover {
                color: #5624d0 !important;
            }

        /* --- STYLE CHO AVATAR TRÒN --- */
        .user-avatar-circle {
            width: 32px;
            height: 32px;
            background-color: #1c1d1f;
            color: #fff;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 14px;
            text-decoration: none;
        }

            .user-avatar-circle img {
                width: 100%;
                height: 100%;
                border-radius: 50%;
                object-fit: cover;
            }

        /* --- STYLE CHO DROPDOWN GIỐNG UDEMY --- */
        .udemy-dropdown-menu {
            width: 280px;
            border-radius: 0;
            border: 1px solid #d1d7dc;
            padding: 0;
            margin-top: 10px !important;
            box-shadow: 0 4px 16px rgba(0,0,0,0.1);
        }

        .udemy-user-info {
            padding: 16px;
            display: flex;
            gap: 10px;
            align-items: center;
            border-bottom: 1px solid #d1d7dc;
        }

            .udemy-user-info .avatar-large {
                width: 64px;
                height: 64px;
                font-size: 24px;
            }

        .udemy-menu-item {
            padding: 10px 16px;
            color: #2d2f31;
            font-size: 14px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .udemy-menu-item:hover {
                background-color: #f0f0f0;
                color: #5624d0;
            }

        .notification-badge {
            background-color: #a435f0;
            color: white;
            font-size: 10px;
            width: 18px;
            height: 18px;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 50%;
        }

        footer {
            background-color: #1c1d1f;
            color: white;
            padding: 30px 0;
            margin-top: 50px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white sticky-top">
        <div class="container-fluid px-4">

            <a class="navbar-brand p-0" href="/">
                <div class="logo-horizontal">
                    <div class="icon-wrapper">
                        <span class="letter letter-t">T</span>
                        <span class="ampersand">&</span>
                        <span class="letter letter-c">C</span>

                        <svg width="0" height="0">
                            <defs>
                                <linearGradient id="grad_soft" x1="0%" y1="0%" x2="100%" y2="0%">
                                    <stop offset="0%" style="stop-color:#3b82f6;stop-opacity:1" />
                                    <stop offset="100%" style="stop-color:#f97316;stop-opacity:1" />
                                </linearGradient>
                            </defs>
                        </svg>

                        <svg class="smile-svg" viewBox="0 0 100 25" preserveAspectRatio="none">
                            <path class="curve-path" d="M 5 5 Q 50 22 95 5" />
                        </svg>
                    </div>

                    <div class="text-block d-none d-sm-flex">
                        <div class="brand-main">ACADEMY</div>
                        <div class="brand-slogan">Trust & <span class="care-highlight">Care</span></div>
                    </div>
                </div>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    @await Component.InvokeAsync("CategoryMenu")
                    <li class="nav-item">
                        <form class="d-flex ms-3" style="width: 350px;" action="/KhoaHoc/Search" method="get">
                            <div class="input-group rounded-pill border overflow-hidden bg-light">
                                <button class="btn border-0" type="submit"><i class="bi bi-search text-muted"></i></button>

                                <input class="form-control border-0 bg-light shadow-none"
                                       type="search"
                                       name="keyword"
                                       placeholder="Tìm kiếm khóa học"
                                       value="@ViewBag.Keyword">
                            </div>
                        </form>
                    </li>
                    <li class="nav-item ms-3"><a class="nav-link" href="/Home/GioiThieu">Doanh nghiệp</a></li>


                    @* --- BẮT ĐẦU SỬA ĐOẠN NÀY --- *@
                    @if (maTK != null) // Đã đăng nhập
                    {
                        if (laGiangVien == 1)
                        {
                            // Đã là giảng viên -> Vào trang Dashboard
                            <li class="nav-item"><a class="nav-link" href="/GiangVien">Giảng viên</a></li>
                        }
                        else
                        {
                            // Chưa là giảng viên -> Vào trang Đăng ký
                            <li class="nav-item"><a class="nav-link" href="/GiangVien/DangKyGiangVien">Trở thành giảng viên</a></li>
                        }
                    }
                    else
                    {
                        // Chưa đăng nhập: Mặc định cũng hiện "Trở thành giảng viên" để kích thích người dùng click vào (sẽ redirect login)
                        <li class="nav-item"><a class="nav-link" href="/GiangVien/DangKyGiangVien">Trở thành giảng viên</a></li>
                    }
                    @* --- KẾT THÚC SỬA --- *@


                   
                </ul>

                <div class="d-flex align-items-center gap-3">
                    @if (maTK == null)
                    {
                        <a href="/Account/Login" class="btn btn-outline-dark rounded-0 fw-bold px-3">Đăng nhập</a>
                        <a href="/Account/Register" class="btn btn-dark rounded-0 fw-bold px-3">Đăng ký</a>
                    }
                    else
                    {
                        <a href="#" class="text-dark fs-5" title="Danh sách mong ước"><i class="bi bi-heart"></i></a>

                        @* <a href="/GioHang/XemGioHang" class="text-dark fs-5 position-relative" title="Giỏ hàng"> *@
                        @*     <i class="bi bi-cart3"></i> *@
                        @*     @if (maHV != null) *@
                        @*     { *@
                        @*         <span class="position-absolute top-0 start-100 translate-middle badge rounded-circle bg-primary" style="font-size: 0.6rem; padding: 4px 6px;">2</span> *@
                        @*     } *@
                        @* </a> *@
                        <a href="/GioHang/XemGioHang" class="text-dark fs-5 position-relative" title="Giỏ hàng">
                            <i class="bi bi-cart3"></i>
                            @await Component.InvokeAsync("CartBadge")
                        </a>

                        <a href="#" class="text-dark fs-5 position-relative"><i class="bi bi-bell"></i></a>

                        <div class="dropdown">
                            <a href="#" class="user-avatar-circle dropdown-toggle text-white" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                @if (!string.IsNullOrEmpty(avatar))
                                {
                                    <img src="@avatar" alt="@tenDN">
                                }
                                else
                                {
                                    <span>@firstLetter</span>
                                }
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end udemy-dropdown-menu" aria-labelledby="userDropdown">
                                <li>
                                    <div class="udemy-user-info">
                                        <div class="user-avatar-circle avatar-large">
                                            @if (!string.IsNullOrEmpty(avatar))
                                            {
                                                <img src="@avatar" alt="@tenDN">
                                            }
                                            else
                                            {
                                                <span>@firstLetter</span>
                                            }
                                        </div>
                                        <div class="overflow-hidden">
                                            <div class="fw-bold text-truncate" style="max-width: 180px;">@tenDN</div>
                                            <div class="text-muted small text-truncate" style="max-width: 180px;">@(email ?? "Chưa cập nhật email")</div>
                                        </div>
                                    </div>
                                </li>
                                <li class="py-2">
                                    <a class="dropdown-item udemy-menu-item" href="/KhoaHoc/MyCourses">Học tập</a>
                                    <a class="dropdown-item udemy-menu-item" href="/GioHang/XemGioHang">
                                        Giỏ hàng của tôi
                                        <span class="notification-badge">2</span>
                                    </a>
                                    <a class="dropdown-item udemy-menu-item" href="/Account/Wishlist">Danh sách mong ước</a>
                                    <a class="dropdown-item udemy-menu-item" href="/GiangVien/Dashboard">Bảng điều khiển giảng viên</a>
                                </li>
                                <li><hr class="dropdown-divider m-0"></li>
                                <li class="py-2">
                                    <a class="dropdown-item udemy-menu-item" href="/HocVien/Profile">Hồ sơ cá nhân</a>
                                    <a class="dropdown-item udemy-menu-item" href="/Account/Logout" class="fw-bold text-danger">Đăng xuất</a>
                                </li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </div>
    </nav>

    <div class="container mb-5 mt-4">
        @RenderBody()
    </div>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5>T&C Academy</h5>
                    <p>Nền tảng học tập trực tuyến hàng đầu.</p>
                </div>
                <div class="col-md-8 text-end">
                    <p>&copy; @DateTime.Now.Year - T&C Academy. Trust & Care.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>