@model List<QL_KhoaHoc.Models.DanhMucCon>
@{
    ViewData["Title"] = "Chọn lĩnh vực quan tâm";
    Layout = "~/Views/Shared/_HocVien_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
            <h2 class="fw-bold mb-3">Bạn quan tâm đến lĩnh vực nào?</h2>
            <p class="text-muted mb-4">Chọn ít nhất 1 chủ đề để chúng tôi gợi ý khóa học phù hợp nhất cho bạn.</p>

            <div class="position-relative mb-5 mx-auto" style="max-width: 500px;">
                <input type="text" id="searchInput" class="form-control rounded-pill py-3 px-5 shadow-sm border-0"
                       placeholder="Tìm kiếm chủ đề (VD: Java, Marketing...)" onkeyup="filterCategories()" />
                <i class="fas fa-search position-absolute top-50 translate-middle-y text-muted" style="left: 20px;"></i>
            </div>

            <form asp-action="LuuSoThich" method="post">
                <div id="categoryList" class="d-flex flex-wrap justify-content-center gap-3">
                    @foreach (var item in Model)
                    {
                        <label class="interest-card" data-name="@item.TenDanhMucCon">
                            <input type="checkbox" name="selectedCategories" value="@item.MaDanhMucCon" />
                            <div class="card-content shadow-sm">
                                <span class="icon">✨</span>
                                <span class="fw-bold item-text">@item.TenDanhMucCon</span>
                            </div>
                        </label>
                    }
                </div>

                <div id="noResults" class="text-muted mt-4 d-none">
                    <i class="far fa-frown fa-2x mb-2"></i>
                    <p>Không tìm thấy chủ đề nào phù hợp.</p>
                </div>

                <div class="mt-5">
                    <button type="submit" class="btn btn-primary btn-lg px-5 rounded-pill shadow">
                        Hoàn tất & Khám phá <i class="fas fa-arrow-right ms-2"></i>
                    </button>
                    <div class="mt-3">
                        <a href="@Url.Action("Index", "Home")" class="text-muted text-decoration-none small">Bỏ qua, tôi sẽ chọn sau</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function filterCategories() {
        // 1. Lấy từ khóa và chuẩn hóa (bỏ dấu, chữ thường)
        var input = document.getElementById("searchInput");
        var filter = removeVietnameseTones(input.value.toLowerCase());

        // 2. Lấy danh sách thẻ
        var container = document.getElementById("categoryList");
        var items = container.getElementsByClassName("interest-card");
        var hasResult = false;

        // 3. Duyệt và ẩn/hiện
        for (var i = 0; i < items.length; i++) {
            // Lấy tên từ thuộc tính data-name
            var txtValue = items[i].getAttribute("data-name");
            var cleanText = removeVietnameseTones(txtValue.toLowerCase());

            if (cleanText.indexOf(filter) > -1) {
                items[i].style.display = ""; // Hiện
                hasResult = true;
            } else {
                items[i].style.display = "none"; // Ẩn
            }
        }

        // 4. Xử lý thông báo "Không tìm thấy"
        var noResDiv = document.getElementById("noResults");
        if (!hasResult) {
            noResDiv.classList.remove("d-none");
        } else {
            noResDiv.classList.add("d-none");
        }
    }

    // Hàm bỏ dấu Tiếng Việt
    function removeVietnameseTones(str) {
        str = str.replace(/à|á|ạ|ả|ã|â|ầ|ấ|ậ|ẩ|ẫ|ă|ằ|ắ|ặ|ẳ|ẵ/g, "a");
        str = str.replace(/è|é|ẹ|ẻ|ẽ|ê|ề|ế|ệ|ể|ễ/g, "e");
        str = str.replace(/ì|í|ị|ỉ|ĩ/g, "i");
        str = str.replace(/ò|ó|ọ|ỏ|õ|ô|ồ|ố|ộ|ổ|ỗ|ơ|ờ|ớ|ợ|ở|ỡ/g, "o");
        str = str.replace(/ù|ú|ụ|ủ|ũ|ư|ừ|ứ|ự|ử|ữ/g, "u");
        str = str.replace(/ỳ|ý|ỵ|ỷ|ỹ/g, "y");
        str = str.replace(/đ/g, "d");
        str = str.replace(/À|Á|Ạ|Ả|Ã|Â|Ầ|Ấ|Ậ|Ẩ|Ẫ|Ă|Ằ|Ắ|Ặ|Ẳ|Ẵ/g, "A");
        str = str.replace(/È|É|Ẹ|Ẻ|Ẽ|Ê|Ề|Ế|Ệ|Ể|Ễ/g, "E");
        str = str.replace(/Ì|Í|Ị|Ỉ|Ĩ/g, "I");
        str = str.replace(/Ò|Ó|Ọ|Ỏ|Õ|Ô|Ồ|Ố|Ộ|Ổ|Ỗ|Ơ|Ờ|Ớ|Ợ|Ở|Ỡ/g, "O");
        str = str.replace(/Ù|Ú|Ụ|Ủ|Ũ|Ư|Ừ|Ứ|Ự|Ử|Ữ/g, "U");
        str = str.replace(/Ỳ|Ý|Ỵ|Ỷ|Ỹ/g, "Y");
        str = str.replace(/Đ/g, "D");
        str = str.replace(/\u0300|\u0301|\u0303|\u0309|\u0323/g, "");
        return str;
    }
</script>