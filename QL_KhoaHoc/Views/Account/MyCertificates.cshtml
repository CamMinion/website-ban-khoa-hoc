@model List<QL_KhoaHoc.Models.ChungChi>
@{
    ViewData["Title"] = "Chứng chỉ của tôi";
    Layout = "~/Views/Shared/_HocVien_Layout.cshtml";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-3 mb-4">
            <div class="list-group shadow-sm">
                <a href="/Account/Profile" class="list-group-item list-group-item-action border-0 py-3">
                    <i class="bi bi-person-circle me-2"></i> Thông tin tài khoản
                </a>
                <a href="/KhoaHoc/MyCourses" class="list-group-item list-group-item-action border-0 py-3">
                    <i class="bi bi-journal-bookmark-fill me-2"></i> Khóa học của tôi
                </a>
                <a href="/Account/MyCertificates" class="list-group-item list-group-item-action active border-0 py-3">
                    <i class="bi bi-award-fill me-2"></i> Chứng chỉ của tôi
                </a>
                <a href="/Account/Logout" class="list-group-item list-group-item-action text-danger border-0 py-3">
                    <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                </a>
            </div>
        </div>

        <div class="col-lg-9">
            <h3 class="fw-bold mb-4"><i class="bi bi-award text-warning"></i> Bộ sưu tập chứng chỉ</h3>

            @if (Model != null && Model.Any())
            {
                <div class="row row-cols-1 row-cols-md-2 g-4">
                    @foreach (var cert in Model)
                    {
                        <div class="col">
                            <div class="card h-100 border-0 shadow-sm hover-shadow transition">
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="flex-shrink-0">
                                            <img src="@cert.AnhBiaKhoaHoc" class="rounded" style="width: 60px; height: 60px; object-fit: cover;">
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="fw-bold mb-0 text-truncate" title="@cert.TenKhoaHoc">@cert.TenKhoaHoc</h6>
                                            <small class="text-muted">GV: @cert.TenGiangVien</small>
                                        </div>
                                    </div>

                                    <div class="bg-light p-2 rounded mb-3 border border-dashed">
                                        <div class="d-flex justify-content-between small">
                                            <span class="text-muted">Mã số:</span>
                                            <span class="fw-mono text-dark">@cert.MaCode</span>
                                        </div>
                                        <div class="d-flex justify-content-between small mt-1">
                                            <span class="text-muted">Ngày cấp:</span>
                                            <span>@cert.NgayCap.ToString("dd/MM/yyyy")</span>
                                        </div>
                                    </div>

                                    <a href="http://localhost:5105/api/KhoaHoc/DownloadCertificate/@cert.MaCode" target="_blank" class="btn btn-outline-primary w-100">
                                        <i class="bi bi-download me-2"></i> Tải chứng chỉ
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5 bg-white rounded shadow-sm">
                    <img src="https://cdn-icons-png.flaticon.com/512/2910/2910791.png" width="100" class="mb-3 opacity-50">
                    <h5 class="text-muted">Bạn chưa có chứng chỉ nào.</h5>
                    <p class="small text-muted">Hãy hoàn thành 100% khóa học để nhận chứng chỉ nhé!</p>
                    <a href="/KhoaHoc/MyCourses" class="btn btn-primary mt-2">Học ngay</a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-3px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
        transition: all 0.3s;
    }
    .fw-mono {
        font-family: 'Courier New', Courier, monospace;
        font-weight: bold;
    }
</style>