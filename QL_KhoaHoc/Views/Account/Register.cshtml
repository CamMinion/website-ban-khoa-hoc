@model QL_KhoaHoc.Models.RegisterModel

@{
    ViewData["Title"] = "Đăng Ký Tài Khoản";
    Layout = "~/Views/Shared/_HocVien_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    /* Giữ nguyên CSS giao diện đẹp */
    .register-wrapper {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 85vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    .card-custom {
        border: none;
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.15);
        overflow: hidden;
        background: white;
        width: 100%;
        max-width: 1000px;
    }

    .bg-register-image {
        background-image: url('https://images.unsplash.com/photo-1523240795612-9a054b0db644?ixlib=rb-4.0.3&auto=format&fit=crop&w=1350&q=80');
        background-size: cover;
        background-position: center;
        position: relative;
        min-height: 500px;
    }

    .bg-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to bottom, rgba(0,0,0,0.1), rgba(0,0,0,0.4));
    }

    .form-container {
        padding: 50px 40px;
    }

    .title-text {
        font-weight: 800;
        color: #2d3436;
        margin-bottom: 10px;
    }

    .sub-title {
        color: #636e72;
        font-size: 0.95rem;
        margin-bottom: 30px;
    }

    .input-group-text {
        background: #fff;
        border-right: none;
        border-radius: 10px 0 0 10px;
        border-color: #dfe6e9;
        color: #6c5ce7;
    }

    .form-control {
        border-left: none;
        border-radius: 0 10px 10px 0;
        border-color: #dfe6e9;
        padding: 12px;
        font-size: 0.95rem;
    }

        .form-control:focus {
            box-shadow: none;
            border-color: #6c5ce7;
        }

            .form-control:focus + .input-group-text,
            .input-group-text:has(+ .form-control:focus) {
                border-color: #6c5ce7;
            }

    .btn-gradient {
        background: linear-gradient(45deg, #6c5ce7, #a29bfe);
        border: none;
        color: white;
        padding: 12px;
        border-radius: 10px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
    }

        .btn-gradient:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(108, 92, 231, 0.3);
            color: white;
        }

    .link-login {
        color: #6c5ce7;
        font-weight: 600;
        text-decoration: none;
    }

        .link-login:hover {
            text-decoration: underline;
        }
</style>

<div class="register-wrapper">
    <div class="card card-custom">
        <div class="row g-0">
            <div class="col-lg-6 d-none d-lg-block bg-register-image">
                <div class="bg-overlay"></div>
                <div class="d-flex align-items-end h-100 p-4 position-relative text-white">
                    <div>
                        <h3 class="fw-bold">Chào mừng bạn!</h3>
                        <p class="mb-0">Tham gia cộng đồng học tập và phát triển kỹ năng ngay hôm nay.</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="form-container">
                    <h2 class="title-text">Tạo Tài Khoản</h2>
                    <p class="sub-title">Điền thông tin bên dưới để nhận mã OTP xác thực</p>

                    <form asp-action="Register" method="post" autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>

                        <div class="mb-3">
                            <label asp-for="TenDN" class="form-label fw-bold small text-muted">Họ và Tên</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                <input asp-for="TenDN" class="form-control" placeholder="Nhập họ tên của bạn" autocomplete="off" />
                            </div>
                            <span asp-validation-for="TenDN" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold small text-muted">Địa chỉ Email</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <input asp-for="Email" class="form-control" placeholder="name@example.com" autocomplete="off" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MatKhau" class="form-label fw-bold small text-muted">Mật Khẩu</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input asp-for="MatKhau" type="password" class="form-control" placeholder="••••••••" autocomplete="new-password" />
                            </div>
                            <span asp-validation-for="MatKhau" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="NhapLaiMatKhau" class="form-label fw-bold small text-muted">Xác Nhận Mật Khẩu</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-shield-alt"></i></span>
                                <input asp-for="NhapLaiMatKhau" type="password" class="form-control" placeholder="••••••••" autocomplete="new-password" />
                            </div>
                            <span asp-validation-for="NhapLaiMatKhau" class="text-danger small"></span>
                        </div>

                        <input type="hidden" name="asGiangVien" value="@(ViewData["AsGiangVien"] ?? "false")" />

                        <div class="d-grid">
                            <button type="submit" class="btn btn-gradient">
                                Gửi OTP Xác Thực <i class="fas fa-paper-plane ms-2"></i>
                            </button>
                        </div>

                        <div class="text-center mt-4">
                            <small class="text-muted">Bạn đã có tài khoản? <a href="/Account/Login" class="link-login">Đăng nhập tại đây</a></small>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>